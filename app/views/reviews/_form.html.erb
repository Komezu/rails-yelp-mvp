<%= simple_form_for [restaurant, review] do |f| %>
  <%= f.input :content, as: :text %>
  <%= f.input :rating, as: :radio_buttons, collection: 0..5, item_wrapper_class: "inline" %>
  <%= f.submit "Leave a review" %>
<% end %>

